```java
class Solution {
    void segregate0and1(int[] arr, int n) {
        // code here
        int sum = 0;
        for (int i = 0;i<n;i++)
        {
            sum = sum +arr[i];
        }
         
        for(int i = 0;i<n-sum;i++){
            arr[i]=0;
        }
        
        for(int i = n-sum;i<n;i++){
            arr[i]=1;
        }
    }

}
